<script>
function delete_room(room_id)
{
	if(confirm("Do you want to delete the room?"))
	{
		this.document.frm_room.room_id.value=room_id;
		this.document.frm_room.act.value="delete_room";
		this.document.frm_room.submit();
	}
}
</script>
