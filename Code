	include_once("includes/header.php"); 
?> 
<section id="subintro">
   <div class="jumbotron subhead" id="overview">
      <div class="container">
         <div class="row">
            <div class="span12">
               <div class="centered">
                  <h3>About Hotel Booking System</h3>
               </div>
            </div>
         </div>
      </div>
   </div>
