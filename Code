	global $con;
	/////////Delete the record//////////
	$SQL="DELETE FROM category WHERE category_id = $_REQUEST[category_id]";
	 mysqli_query($con,$SQL) or die(mysqli_error($con));
	header("Location:../category-report.php?msg=Deleted Successfully.");
}
